<div class='container'>
  <%= render "public/games/sub_header", platforms: @platforms %>
  <div class="row">
    <div id="search_title" class="offset-md-1 my-2">
      <%= render "title_index", word: @word, total_games: @total_games %>
    </div>
    <div class="ml-auto">
      <%= link_to "＋ゲームの登録", new_game_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render "public/games/side_bar", tags: @tags, link: games_search_path, sub_title: "新着順" %>
    </div>
    <div id="games_index" class="col-md-9">
      <%= render "index", games: @games %>
    </div>
  </div>
</div>
