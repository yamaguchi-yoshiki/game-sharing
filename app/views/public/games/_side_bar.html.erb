<div class="row border-bottom mb-2">
  <h5 class="mx-auto">検索バー(<%= sub_title %>)</h5>
</div>

<%= form_with url: link, method: :get do |f| %>
  <div class="row pb-2 border-bottom">
    <div class="ml-2">
      <%= f.text_field :word, placeholder: "タイトルを検索...", class: "form-control" %>
    </div>
    <div>
      <%= f.submit "検索", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<%= form_with url: link, method: :get do |f| %>
  <%= f.hidden_field :type, :value => "tag" %>
  <% @tags.each do |tag| %>
    <p><%= f.submit "#{tag.name}", class: "btn btn-link" %></p>
  <% end %>
<% end %>
