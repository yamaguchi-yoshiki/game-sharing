<%= form_with model: thread, url: threads_path, method: :post do |f| %>
  <table class="table table-borderless">
    <tr>
      <td style="width: 30%"><%= f.label :title, "タイトル" %></td>
      <td><%= f.text_field :title, class: "form-control", size: "40" %></td>
    </tr>
    <tr>
      <td class="align-middle"><%= f.label :introduction, "説明欄" %></td>
      <td><%= f.text_area :introduction, rows: '5', class: "form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :no_spoiler, "ネタバレの可否" %></td>
      <td>
        <%= f.radio_button :no_spoiler, false, checked: true %>
        <%= f.label "あり" %>
        <%= f.radio_button :no_spoiler, true %>
        <%= f.label "なし" %>
      </td>
    </tr>
  </table>
  <div class="mx-auto">
    <%= f.hidden_field :game_id, value: game.id %>
    <%= f.submit "作成", class: 'btn btn-success' %>
  </div>
<% end %>
