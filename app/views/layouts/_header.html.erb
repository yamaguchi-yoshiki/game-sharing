<header class="mb-2">
  <nav class="navbar navbar-expand-lg navbar-dark p-3" style='background-color: #0A0A0A;'>
    <div class="container">
      <div>
        <a class="navbar-brand" href="/"><%= image_tag 'GameR&S_logo.jpg', size: "120x60" %></a>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <% if admin_signed_in? %>
          <span class="navbar-text text-success">ログイン中:</span>
          <span class="navbar-text text-warning">管理者</span>
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to games_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-gamepad"></i><span> ゲーム一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_root_path, class: 'm-2  btn btn-outline-light' do %>
                <i class="fas fa-users"></i><span> 会員一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_platforms_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-desktop"></i><span> 機種一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_tags_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-tags"></i><span> タグ一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-sign-out-alt"></i><span> ログアウト</span>
              <% end %>
            </li>
          </ul>
        <% elsif customer_signed_in? %>
          <span class="navbar-text text-success">ログイン中: </span>
          <span class="navbar-text text-white"><%= current_customer.name %>さん</span>
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to customer_path(current_customer), class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-user"></i><span> マイページ</span>
              <% end %>
            </li>
            <li>
              <%= link_to customer_reviews_path(current_customer), class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-star"></i><span> レビュー履歴</span>
              <% end %>
            </li>
            <li>
              <%= link_to rankings_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-crown"></i><span> ランキング</span>
              <% end %>
            </li>
            <li>
              <%= link_to games_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-gamepad"></i><span> ゲーム一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_customer_session_path, method: :delete, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-sign-out-alt"></i><span> ログアウト</span>
              <% end %>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to about_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-link"></i><span> About</span>
              <% end %>
            </li>
            <li>
              <%= link_to rankings_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-crown"></i><span> ランキング</span>
              <% end %>
            </li>
            <li>
              <%= link_to games_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-gamepad"></i><span> ゲーム一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_customer_registration_path, class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-user-plus"></i><span> 新規登録</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_customer_session_path , class: 'm-2 btn btn-outline-light' do %>
                <i class="fas fa-sign-in-alt"></i><span> ログイン</span>
              <% end %>
            </li>
          </ul>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <!-- フラッシュメッセージ -->
  <div id="flash_message">
    <%= render 'layouts/flash_message' %>
  </div>
</header>
